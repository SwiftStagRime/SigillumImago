<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="PinDot">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:src">@drawable/ic_dot</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="PinPadButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PinPadButton.Icon" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
